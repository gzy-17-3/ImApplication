<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".module.mine.UpdateUsernameActivity">


    <RelativeLayout style="@style/style_navigation_bar">

        <TextView
            android:text="修改用户名"
            android:id="@+id/nav_title"
            style="@style/style_navgation_bar_title">
        </TextView>

        <Button
            android:background="@drawable/ic_keyboard_backspace_black"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:onClick="onClickBack"
            >

        </Button>
        
        <Button
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:onClick="onClickCommit"
            android:text="提交修改"
            android:layout_width="wrap_content"
            android:layout_height="55dp"/>

    </RelativeLayout>

    <EditText
        android:id="@+id/et_username"
        android:layout_width="match_parent"
        android:layout_height="45dp"/>

</LinearLayout>